.PHONY: clean all quake3

# http://ioquake3.org/data/quake3-latest-pk3s.zip
BASEQ3DIR=baseq3

all:
	cd Quake3 && PATH=$(FLASCC)/usr/bin:$(PATH) make FLASCC=$(FLASCC) GLS3D=$(GLS3D) BASEQ3DIR=$(BASEQ3DIR) -j4

include ../Makefile.common

clean:
	rm -rf quake3/build